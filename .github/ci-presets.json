{
    "version": 3,
    "configurePresets": [
        {
            "name": "ci-default",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                },
                "CMAKE_BUILD_TYPE": "Release"
            },
            "inherits": [
                "default",
                "enable-tests"
            ]
        },
        {
            "name": "ci-msvc",
            "displayName": "VS 2022 x64 Release",
            "inherits": [
                "ci-default"
            ],
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "ci-gcc",
            "displayName": "GCC x64 Release",
            "inherits": [
                "ci-default"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "ci-clang",
            "displayName": "Clang x64 Release",
            "inherits": [
                "ci-default"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ci-msvc",
            "configurePreset": "ci-msvc"
        },
        {
            "name": "ci-gcc",
            "configurePreset": "ci-gcc"
        },
        {
            "name": "ci-clang",
            "configurePreset": "ci-clang"
        }
    ],
    "testPresets": [
        {
            "name": "ci-msvc",
            "configurePreset": "ci-msvc"
        },
        {
            "name": "ci-gcc",
            "configurePreset": "ci-gcc"
        },
        {
            "name": "ci-clang",
            "configurePreset": "ci-clang"
        }
    ]
}
